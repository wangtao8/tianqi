/**index.wxss**/
page{
  height:100%;
  color:rgb(26, 173, 25);
  width: 100%;
  text-align: center;
}
.search{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-image: url('http://big5.wallcoo.com/cartoon/Scrapbook_Art_Paper_Xmas/images/Christmas_Paper21.jpg');
  z-index: 999;
  box-shadow: 2px 2px 10px 0px black;
  padding: 10px 0px 0px 4px;
  text-shadow: initial;
  text-align: left;
}
.search>input{
  display: inline-block;
  border: 1px solid #ccc;
  padding: 0 3px;
  width: 310px;
  height: 40px;
}
.cha{
  position:absolute;
  width:32px;
  height:32px;
  right:66px;
  top:15px;
  border-radius:16px;
  border:1px solid #ccc;
  padding:2px;
  box-sizing:border-box;
  z-index:9999;
}
.search>span{
  position: absolute;
  top: 20px;
  right: 10px;
  color: #698821;
}
.content{
  margin-top: 20px;
}
.zhuangtai{
  width: 130px;
  height: 130px;
}
.dizhi{
  font-size: 32px;
  color: rgb(26,173,25);
  text-shadow:1px 1px rgba(155,55,55,.8);
  margin-top: 100px;
}
.minTmp{
  font-size:24px;
  color:rgb(26, 173, 25);
}
.weilai{
  margin-top: 30px;
}
.everyDay:after{
  display: block;
  content: '------------------------------';
  height: 0px;
  background-color: #ccc;
  margin-top: 20px;
}
.zhishu{
  width: 100%;
}
.zhishu:after{
  display: block;
  content: '------------------------------';
  height: 0px;
  background-color: #ccc;
  margin-top: 0px;
  width: 250px;
  margin: 0 auto;
}