/**index.wxss**/
page{
  height:100%;
  color:rgb(26, 173, 25);
  width: 100%;
  text-align: center;
}
.search{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-image: url('http://big5.wallcoo.com/cartoon/Scrapbook_Art_Paper_Xmas/images/Christmas_Paper21.jpg');
  z-index: 999;
  box-shadow: 2px 2px 10px 0px black;
  padding: 10px 0px 0px 4px;
  text-shadow: initial;
  text-align: left;
}
.search>input{
  display: inline-block;
  border: 1px solid #ccc;
  padding: 0 3px;
  width: 310px;
  height: 40px;
}
.cha{
  position:absolute;
  width:32px;
  height:32px;
  right:66px;
  top:15px;
  border-radius:16px;
  border:1px solid #ccc;
  padding:2px;
  box-sizing:border-box;
  z-index:9999;
}
.search>span{
  position: absolute;
  top: 20px;
  right: 10px;
  color: #698821;
}
.content{
  margin-top: 20px;
}
.zhuangtai{
  width: 130px;
  height: 130px;
}
.dizhi{
  font-size: 32px;
  color: rgb(26,173,25);
  text-shadow:1px 1px rgba(155,55,55,.8);
}
.minTmp{
  font-size:24px;
  color:rgb(26, 173, 25);
}
.weilai{
  margin-top: 30px;
}
.everyDay:after{
  display: block;
  content: '------------------------------';
  height: 0px;
  background-color: #ccc;
  margin-top: 20px;
}
.zhishu{
  width: 100%;
}
.zhishu:after{
  display: block;
  content: '------------------------------';
  height: 0px;
  background-color: #ccc;
  margin-top: 0px;
  width: 250px;
  margin: 0 auto;
}
.userInfo{
  margin-top: 100px;
  color: #ec760c;
}
.userInfo,.userInfo:hover,.userInfo:active,.userInfo:visited,.userInfo:link,.userInfo:focus{
  -webkit-tap-highlight-color:rgba(0,0,0,0);
}
.avatarUrl{
  display: inline-block;
  width: 100px;
  height: 100px;
  border-radius: 50px;
  border: 1px solid #ccc;
  position: relative;
  animation: spin 5s 1 cubic-bezier(0.14, 0.25, 0, 1.18) forwards;
  animation-delay:0.3s;
}
.userName{
    background-image: -webkit-linear-gradient(left, #147B96, #E6D205 25%, #147B96 50%, #E6D205 75%, #147B96);
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    background-size: 200% 100%;
    animation: masked-animation 4s infinite linear;
    animation-duration: alternate;
  }
@keyframes masked-animation {
  0%{ background-position: 0 0;}
  100% { background-position: -100% 0;}
}
@keyframes spin {
  0%  { transform: rotate(0deg) scale(0.5); left: -150px;border-radius: 0px;}
  100%  { transform: rotate(360deg) scale(1); left: 0px;border-radius: 50px;}
}